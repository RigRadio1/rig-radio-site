<script>/* Sort init (FIXES 7 clean) */(function(){
  var s=document.getElementById("sSort");
  var saved=localStorage.getItem("LIB_SORT")||"recent";
  if(s){ s.value=saved; }
  window.LIB_SORT = (s && s.value) ? s.value : saved;
  if(s){ s.addEventListener("change", function(){
    localStorage.setItem("LIB_SORT", this.value);
    window.LIB_SORT=this.value;
    var go=document.getElementById("sGo"); if(go){ go.click(); }
  }); }
})();</script>
